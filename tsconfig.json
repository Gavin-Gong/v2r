{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "views/*": ["src/views/*"],
      "router/*": ["src/router/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"],
      "redux/*": ["src/redux/*"],
      "components/*": ["src/components/*"],
      "services/*": ["src/services/*"],
      "api/*": ["src/api/*"],
      "api": ["src/api/index"],
      "typings": ["src/typings/index.d.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "typeAcquisition": {
    "include": [
      "react",
      "react-router-dom",
      "redux",
      "react-redux",
      "redux-observable"
    ]
  }
}
